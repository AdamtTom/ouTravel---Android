<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/Page4_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/page4_location"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/Page4_imageView"
        android:layout_width="500dp"
        android:layout_height="200dp"
        tools:ignore="ContentDescription"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/Page4_textView1"
        app:srcCompat="@drawable/vancouver" />
    <TextView
        android:id="@+id/Page4_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/page4_country"
        android:textSize="25sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/Page4_imageView"/>
    <TextView
        android:id="@+id/Page4_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/page4_city"
        android:layout_marginStart="40dp"
        android:textSize="25sp"
        android:layout_below="@id/Page4_textView2"/>
    <TextView
        android:id="@+id/Page4_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/page4_date"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:layout_below="@id/Page4_textView3"/>
    <TextView
        android:id="@+id/Page4_textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/page4_price"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:layout_below="@id/Page4_textView4"/>

    <Button
        android:id="@+id/Page4_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Page4_textView5"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:textSize="25sp"
        android:text="@string/page4_select" />

    <Button
        android:id="@+id/Page4_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Page4_textView5"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:layout_marginStart="260dp"
        android:text="@string/next" />

</RelativeLayout>